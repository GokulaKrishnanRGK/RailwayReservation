{{page-title "Login"}}
<div class="dataContainer">
  <form {{on "submit" this.authenticate}}>
    <table>
      <tbody>
        <tr>
          <td><label for="identification">UserId</label></td>
          <td><Input id='identification' placeholder="Enter UserId" @value={{this.identification}} /></td>
        </tr>
        <tr>
          <td><label for="password">Password</label></td>
          <td><Input id='password' @type="password" placeholder="Enter Password" @value={{this.password}}/></td>
        </tr>
      </tbody>
    </table>
    <button type="submit">Login</button>
    <br><br>
    <label>New user? <LinkTo @route="register" class="button">Register</LinkTo></label>
    {{#if this.errorMessage}}
    <p>{{this.errorMessage}}</p>
    {{/if}}
  </form>
</div>

